<%- include('header'); -%>
    <h1> <%= title %> </h1>

    <form action="" method="post">
        <div class="form-group">
            <label for='name'></label> Name:
            <input class="form-control" type='text' name='name' value="<%= (size===null) ? '' : size.name %>">
        </div>

        <div class="form-group">
            <label for='desc'></label> Description:
            <input class="form-control" type='text' name='desc' value="<%= (size===null) ? '' : size.desc %>">
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>

        <% if (errors){
            %>
            <ul>
                <%
                    errors.forEach(function(err) {
                    %> 
                    <li> <%=err.msg%></li>
                    <% });
                %>
            </ul> 
            <%
        }%>
    
    </form>
<%- include('footer'); -%>