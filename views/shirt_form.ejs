<%- include('header'); -%>
    <h1> <%= title %> </h1>

    <form action="" method="post">
        <div class="form-group">
            <label for='name'></label> Name:
            <input class="form-control" type='text' name='name' value="<%= (shirt===null) ? '' : shirt.name %>">
        </div>

        <div class="form-group">
            <label for='desc'></label> Description:
            <input class="form-control" type='text' name='desc' value="<%= (shirt===null) ? '' : shirt.desc %>">
        </div>

        <div class="form-group">
            <label for='stock'></label> Stock:
            <input class="form-control" type='text' name='stock' value="<%= (shirt===null) ? '' : shirt.stock %>" required>
        </div>

        <div class="form-group">
            <label for='brand'>Brand:</label>
            <div>
                <% 
                brands.forEach( function(brand){
                    %>
                        <div style="display: inline; padding-right: 10px;">
                            <input class="checkbox-input" type='checkbox' name='brand' value="<%= brand._id%>" id="<%= brand._id%>" <%= brand.checked===true ? "checked" : ""%>>
                            <label for="<%= brand._id%>"> <%= brand.name %></label>
                        </div>
                    <%
                });                
                %> 
            </div>
        </div>

        <div class="form-group">
            <label for='size'>Size:</label>
            <div>
                <% 
                sizes.forEach( function(size){
                    %>
                        <div style="display: inline; padding-right: 10px;">
                            <input class="radio" type='radio' name='size' value="<%= size._id%>" id="<%= size._id%>" <%= size.checked===true ? "checked" : ""%>>
                            <label for="<%= size._id%>"> <%= size.name %></label>
                        </div>
                    <%
                });                
                %> 
            </div>
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>

        <% if (errors){
            %>
            <ul>
                <%
                    errors.forEach(function(err) {
                    %> 
                    <li> <%=err.msg%></li>
                    <% });
                %>
            </ul> 
            <%
        }%>
    
    </form>
<%- include('footer'); -%>